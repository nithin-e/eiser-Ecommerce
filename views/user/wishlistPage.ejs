  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
function DeleteWishlist(proId) {
  console.log("amount", proId);
  swal.fire({
    title: "Do you want to remove the product?",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, delete it!",
    customClass: {
      popup: 'swal-custom',
      content: 'swal-custom-content',
      confirmButton: 'swal-custom-confirm'
    }
  })
  .then((result) => {
    if (result.isConfirmed) {
      fetch(`/DeleteWishList/${proId}`,{
        method: 'post',
        headers: {
          'Content-Type': 'application/json'
        },
      })
      .then(response => response.json())
      .then(response => {
        if (response.success) {
          Toastify({
            text:response.msng,
            duration: 3000,
            close: true,
            gravity: "top",
            position: "center",
            backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
            stopOnFocus: true,
          }).showToast();
          setTimeout(() => {
            window.location.reload();
          }, 2000);
        } else {
          // Handle the case where the response indicates failure
          console.error("Failed to remove coupon");
        }
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
  });
}
</script>

