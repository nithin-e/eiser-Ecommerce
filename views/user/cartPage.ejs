<script>
  function changeQuantity(productId, change, price) {
    const quantityInput = document.getElementById(`sst_${productId}`);
    const totalElement = document.getElementById(`total_${productId}`);

    let newQuantity = parseInt(quantityInput.value) + change;
    if (newQuantity < 1) newQuantity = 1;

    quantityInput.value = newQuantity;

    // Update total for this product
    const newTotal = newQuantity * parseFloat(price);
    totalElement.textContent = `₹${newTotal.toFixed(2)}`;

    // Update subtotal and grand total
    updateTotals();
  }

  function updateTotals() {
    const totalElements = document.querySelectorAll('[id^="total_"]');
    let subtotal = 0;

    totalElements.forEach(element => {
      subtotal += parseFloat(element.textContent.replace('₹', ''));
    });

    const subtotalElement = document.getElementById('subtotalPrice');
    const grandTotalElement = document.getElementById('grandTotal');
    
    subtotalElement.textContent = `₹${subtotal.toFixed(2)}`;
    grandTotalElement.textContent = `₹${subtotal.toFixed(2)}`;
  }
</script>

