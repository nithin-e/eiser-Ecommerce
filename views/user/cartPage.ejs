<!--================Cart Area =================-->

<section class="cart_area">
  <div class="container">
    <div class="cart_inner">
      <div class="table-responsive">
        <table class="table">
          <!-- Table Headings -->
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
              <th scope="col">Total</th>
            </tr>
          </thead>
          <tbody>
            <!-- Product Rows -->
            <% if (productDetails.length === 0) { %>
              <tr>
                <td colspan="4">Your cart is empty.</td>
              </tr>
            <% } else { %>
              <% productDetails.forEach(productinfo => { %>
                <tr id="productRow_<%= productinfo.productId %>">
                  <td>
                    <div class="media">
                      <div class="d-flex">
                        <img src="<%= productinfo.images[0] %>" alt="Product Image" style="max-width: 100px; max-height: 70px; border-radius: 0px 2pc;">
                      </div>
                      <div class="media-body">
                        <p><%= productinfo.productName %></p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <h5>₹<%= productinfo.total %></h5>
                  </td>
                  <td>
                    <div class="product_count">
                      <input
                        type="text"
                        name="qty"
                        id="sst_<%= productinfo.productId %>"
                        maxlength="12"
                        value="<%= productinfo.quantity %>"
                        title="Quantity:"
                        class="input-text qty"
                      />
                      <button
                        onclick="changeQuantity('<%= productinfo.productId %>', 1, `<%= productinfo.total %>`)"
                        class="increase items-count"
                        type="button"
                      >
                        <i class="lnr lnr-chevron-up"></i>
                      </button>
                      <button
                        onclick="changeQuantity('<%= productinfo.productId %>', -1, `<%= productinfo.total %>`)"
                        class="reduced items-count"
                        type="button"
                      >
                        <i class="lnr lnr-chevron-down"></i>
                      </button>
                    </div>
                  </td>
                  <td>
                    <h5 id="total_<%= productinfo.productId %>">₹<%= productinfo.total * productinfo.quantity %></h5>
                  </td>
                </tr>
              <% }); %>
            <% } %>

            <!-- Subtotal and Total Rows -->
            <tr class="bottom_button">
              <td>
                <a class="gray_btn" href="#">Continue Shopping</a>
              </td>
              <td></td>
              <td></td>
              <td>
                <div class="cupon_text">
                  <input type="text" placeholder="Coupon Code" />
                  <a class="main_btn" href="#">Apply</a>
                  <a class="gray_btn" href="#">Close Coupon</a>
                </div>
              </td>
            </tr>
            <tr class="out_button_area">
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <div class="summary-container" style="font-size: 3px;">
          <div class="summary-item">
            <div class="summary-label"></div>
            <div class="summary-value"></div>
            <div class="summary-label text-right">
              <h5 style="font-size: 15px;">Subtotal</h5>
            </div>
            <div class="summary-value">
              <h5 id="subtotalPrice" style="font-size: 15px;">₹<%= productDetails.reduce((acc, productinfo) => acc + (productinfo.total * productinfo.quantity), 0) %></h5>
            </div>
          </div>
          <div class="summary-item no-border">
            <div class="summary-label"></div>
            <div class="summary-value"></div>
            <div class="summary-label text-right">
              <h5 style="font-size: 15px;">Shipping</h5>
            </div>
            <div class="summary-value">
              <h5 id="shippingCost" style="font-size: 15px;">Free</h5>
            </div>
          </div>
          <div class="summary-item no-border">
            <div class="summary-label"></div>
            <div class="summary-value"></div>
            <div class="summary-label text-right">
              <h5 style="font-size: 15px;">Grand Total</h5>
            </div>
            <div class="summary-value">
              <h5 style="font-size: 15px;" id="grandTotal">₹<%= productDetails.reduce((acc, productinfo) => acc + (productinfo.total * productinfo.quantity), 0) %></h5>
            </div>
          </div>
        </div>
        <div class="grand_total_section">
          <div class="shipping_box">
            <a class="gray_btn" href="#">Proceed to checkout</a>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>




