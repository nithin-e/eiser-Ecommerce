<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>
    <link rel="stylesheet" href="/css/addcategory.css">

    <%-include('../admin/adminpartials/Header')-%>
    
    <!-- navbar start  -->
    <div class="content">
        <%-include('../admin/adminpartials/adminNav')-%>
         <!-- navbar start  -->
     <!-- adminSidebar start -->
     <%-include('../admin/adminpartials/adminSidebar')-%>
     <!-- adminSidebar start -->


     <style>
        .error-message {
            color: red;
            text-align: center;
            margin: 10px 0;
        }
    </style>
    </head>
    <body>
    <div class="form-container" style="margin-left: 250px;margin-top: 80px;">
        <h1>Add Category</h1>
     <% if (locals.exisist) { %>
        <div class="error-message"><%= exisist %></div>
     <% } %>

        <form  action="/storeCatt" method="post" id="categoryForm" >
            <div class="form-group">
                <label for="name">Category Name</label>
                <input type="text" id="name" name="name" required>
                <span style="color: red;" id="error-message"></span>
            </div>
            <!-- <div class="form-group">
                <label for="isActive">Active</label>
                <select id="isActive" name="isActive">
                    <option value="yes">Yes</option>
                    <option value="no">No</option>
                </select>
            </div> -->
            <div class="form-actions">
                <button type="submit">Add Category</button>
                <!-- <button type="button">Add Category</button> -->
            </div>
        </form>
    </div>
    <script>
        document.getElementById("categoryForm").addEventListener("submit",function(event) {
            const nameInput = document.getElementById("name").value.trim();
            const err= document.getElementById("error-message")

           if(nameInput===""){
            event.preventDefault()
            err.innerText="Only Space not Allowed "
           } 
           if(/\d/.test(nameInput)){
            event.preventDefault()
            err.innerText="Number not Allowed "
           }
        })
    </script>
</body>
</html>
